<Window x:Class="FixSender5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FixSender5"
        mc:Ignorable="d"
        Title="FIX Connection" Height="500" Width="600">
    
    <Window.Resources>
        <!-- Estilos para os controles -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="FIX Protocol Connection" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- TabControl Principal -->
        <TabControl Grid.Row="1" Margin="0,0,0,10">
            <TabItem Header="Configuration">
                <!-- Formulário de Configuração -->
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" 
                            BorderBrush="#FFDDDDDD" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Background="#FFFAFAFA"
                            Padding="20">
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Host -->
                            <Label Grid.Row="0" Grid.Column="0" 
                                   Content="Host:" 
                                   Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                     Text="{Binding Host, UpdateSourceTrigger=PropertyChanged}" 
                                     MaxLength="100"
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Enter the server hostname or IP address (max 100 characters)"/>
                            
                            <!-- Port -->
                            <Label Grid.Row="1" Grid.Column="0" 
                                   Content="Port:" 
                                   Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                     Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Enter the port number (1-65535)">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding ConnectCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            
                            <!-- Sender -->
                            <Label Grid.Row="2" Grid.Column="0" 
                                   Content="Sender:" 
                                   Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" 
                                     Text="{Binding Sender, UpdateSourceTrigger=PropertyChanged}" 
                                     MaxLength="50"
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Enter the sender company ID (max 50 characters)"/>
                            
                            <!-- Target -->
                            <Label Grid.Row="3" Grid.Column="0" 
                                   Content="Target:" 
                                   Style="{StaticResource LabelStyle}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                     Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}" 
                                     MaxLength="50"
                                     Style="{StaticResource TextBoxStyle}"
                                     ToolTip="Enter the target company ID (max 50 characters)"/>
                            
                            <!-- Type -->
                            <Label Grid.Row="4" Grid.Column="0" 
                                   Content="Type:" 
                                   Style="{StaticResource LabelStyle}"/>
                            <ComboBox Grid.Row="4" Grid.Column="1"
                                      SelectedItem="{Binding ConnectionType}"
                                      Style="{StaticResource ComboBoxStyle}"
                                      ToolTip="Select connection type">
                                <local:ConnectionType>Acceptor</local:ConnectionType>
                                <local:ConnectionType>Initiator</local:ConnectionType>
                            </ComboBox>
                        </Grid>
                    </Border>
                    
                    <!-- Botão Connect -->
                    <Button Grid.Row="1" 
                            Content="CONNECT"
                            Click="OnClick"
                            Style="{StaticResource ButtonStyle}"
                            Margin="0,20,0,10"
                            IsEnabled="{Binding CanConnect}"/>
                </Grid>
            </TabItem>
            
            <!-- Aba de Mensagens -->
            <TabItem Header="Messages">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Cabeçalho da aba de mensagens -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="FIX Messages" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"/>
                        <Border Background="#FF0078D4" 
                                CornerRadius="10" 
                                Padding="8,2" 
                                Margin="10,0">
                            <TextBlock Text="{Binding Messages.Count}" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="12"/>
                        </Border>
                        <Border Background="#FFFF4444"
                                CornerRadius="3"
                                Margin="10,0">
                            <Button Content="Clear" 
                                    Command="{Binding ClearMessagesCommand}"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="10,5"
                                    Cursor="Hand"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Lista de mensagens -->
                    <Border Grid.Row="1" 
                            BorderBrush="#FFDDDDDD" 
                            BorderThickness="1" 
                            CornerRadius="5">
                        <ListView ItemsSource="{Binding Messages}"
                                  SelectedItem="{Binding SelectedMessage}"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5" 
                                            Margin="2,1"
                                            Background="#FFF9F9F9"
                                            BorderBrush="#FFE0E0E0"
                                            BorderThickness="0,0,0,1"
                                            CornerRadius="3" d:DataContext="{d:DesignInstance }">
                                        <Grid VerticalAlignment="Bottom">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>  <!-- Ícone de direção -->
                                                <ColumnDefinition Width="120"/> <!-- Timestamp -->
                                                <ColumnDefinition Width="100"/> <!-- MessageType -->
                                                <ColumnDefinition Width="*"/>   <!-- Description -->
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Ícone de direção -->
                                            <TextBlock Grid.Column="0" 
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontFamily="Segoe UI Symbol"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Margin="0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Direction}" Value="Incoming">
                                                                <Setter Property="Text" Value="▶"/>
                                                                <Setter Property="Foreground" Value="#FFD32F2F"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Direction}" Value="Outgoing">
                                                                <Setter Property="Text" Value="◀"/>
                                                                <Setter Property="Foreground" Value="#FF388E3C"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Timestamp, StringFormat=HH:mm:ss.fff}" 
                                                       FontFamily="Consolas"
                                                       FontSize="13"
                                                       Foreground="#FF666666"/>
                                            
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding MessageType}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="12"/>
                                            
                                            <TextBlock Grid.Column="3" 
                                                       Text="{Binding Description}" 
                                                       FontSize="12"
                                                       TextTrimming="CharacterEllipsis"
                                                       VerticalAlignment="Bottom"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <EventSetter Event="MouseDoubleClick" Handler="OnMessageDoubleClick"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFF0F8FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Border>
                    
                    <!-- Rodapé com informações -->
                    <TextBlock Grid.Row="2" 
                               Text="{Binding MessagesStatusText}" 
                               Foreground="#FF666666" 
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </Grid>
            </TabItem>
            
            <!-- Aba de Envio de Mensagens -->
            <TabItem Header="Send Message">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Cabeçalho da aba de envio -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Send FIX Message" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center"/>
                        <Border Background="#FF28A745" 
                                CornerRadius="10" 
                                Padding="8,2" 
                                Margin="10,0">
                            <TextBlock Text="{Binding ConnectionStatus}" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="12"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Área de composição da mensagem -->
                    <Border Grid.Row="1" 
                            BorderBrush="#FFDDDDDD" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Background="#FFFAFAFA"
                            Padding="15">
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Instruções -->
                            <TextBlock Grid.Row="0" 
                                       Text="Enter your FIX message below. Use SOH character (^A or \x01) as field separator:"
                                       Foreground="#FF666666"
                                       FontStyle="Italic"
                                       Margin="0,0,0,10"/>
                            
                            <!-- Campo de texto para mensagem -->
                            <Border Grid.Row="1" 
                                    BorderBrush="#FFCCCCCC" 
                                    BorderThickness="1" 
                                    CornerRadius="3" 
                                    Background="White">
                                <TextBox Text="{Binding MessageToSend, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"
                                         FontFamily="Consolas"
                                         FontSize="12"
                                         Padding="10"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         ToolTip="Enter FIX message with fields separated by SOH (^A)"
                                         MinHeight="200"/>
                            </Border>
                            
                            <!-- Informações da mensagem -->
                            <StackPanel Grid.Row="2" 
                                       Orientation="Horizontal" 
                                       Margin="0,10,0,0">
                                <TextBlock Text="Characters: " 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding MessageToSend.Length}"/>
                                <TextBlock Text=" | Fields: " 
                                           FontWeight="SemiBold" 
                                           Margin="15,0,0,0"/>
                                <TextBlock Text="{Binding EstimatedFieldCount}"/>
                                <TextBlock Text="{Binding MessageValidationText}" 
                                           Foreground="{Binding ValidationColor}"
                                           FontWeight="SemiBold"
                                           Margin="15,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Botões de ação -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
    
                        <!-- Botões auxiliares -->
                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <Button Content="Clear" 
                                    Click="ClearSendMessageClick"
                                    Background="#FF6C757D"
                                    Padding="12,8"
                                    Margin="0,0,10,0"
                                    MinWidth="70"
                                    Style="{StaticResource ButtonStyle}"/>
                
                            <Button Content="Load Template" 
                                    Click="LoadSendMessageClick"
                                    Background="#FF17A2B8"
                                    Padding="12,8"
                                    MinWidth="120"
                                    Style="{StaticResource ButtonStyle}"/>
                        </StackPanel>
                        
                        <!-- Botão de envio principal -->
                        <Button Grid.Column="1"
                                Content="SEND"
                                Click="SendMessageClick"
                                Background="#FF28A745"
                                Padding="20,8"
                                FontWeight="Bold"
                                FontSize="14"
                                Style="{StaticResource ButtonStyle}"
                                IsEnabled="{Binding CanSendMessage}"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
                
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#FFF0F0F0" 
                BorderBrush="#FFDDDDDD" 
                BorderThickness="0,1,0,0" 
                Padding="10">
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0" 
                       Content="Connection Status:" 
                       FontWeight="SemiBold" 
                       VerticalAlignment="Center"/>
                       
                <Border Grid.Column="1" 
                        CornerRadius="3"
                        MinWidth="60"
                        HorizontalAlignment="Left">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#FFFF4444"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="ON">
                                    <Setter Property="Background" Value="#FF44AA44"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Label Content="{Binding Status}" 
                           FontWeight="Bold"
                           FontSize="14"
                           Padding="10,5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Background="Transparent"/>
                </Border>
                
                <!-- Informações adicionais -->
                <StackPanel Grid.Column="3" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <TextBlock Text="{Binding Status}" 
                               Foreground="#FF666666" 
                               VerticalAlignment="Center"
                               Margin="10,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>